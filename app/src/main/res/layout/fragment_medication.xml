<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:clipChildren="false"
        android:clipToPadding="false"
        android:id="@+id/medicationScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/medicationContentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/medicationHeaderLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logoImageView"
                    android:layout_width="49dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="17dp"
                    android:src="@drawable/imagelogo"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/appTitleTextView"
                    android:textColor="#0A54B6"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="65dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="MedAssist"/>

                <ImageView
                    android:id="@+id/accountImageView"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:src="@drawable/account_circle"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/monthSelectorLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="19dp"
                android:layout_marginStart="31dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currentMonthTextView"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="11dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    />
                <TextView
                    android:id="@+id/currentYearTextView"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:layout_marginEnd="11dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    />

                <ImageView
                    android:id="@+id/monthDropdownIcon"
                    android:layout_width="35dp"
                    android:layout_height="41dp"
                    android:src="@drawable/arrow_drop_down"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/weeklyCalendarFragment"
                android:name="com.example.medassist.ui.medication.WeeklyCalendarFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>