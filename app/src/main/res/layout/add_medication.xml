
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/medicationNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Medication Name"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/medicationDosageEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dosage (e.g., 1 pill, 5ml)"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/medicationFrequencyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Frequency (e.g., every 6hrs, 3 times a day)"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/medicationTimeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Time (e.g., 09:00pm)"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/medicationSideEffectsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Side Effects (optional)"
        android:inputType="text" />

</LinearLayout>